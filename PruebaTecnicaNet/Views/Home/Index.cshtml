@{
    ViewData["Title"] = "Prueba .NET";
}

<div class="text-center m-5">
    <h2>Prueba .NET - Consultar</h2>
</div>

<div class="container d-flex justify-content-center align-items-center">
    
    <div class="formulario w-50">
    
        <form asp-action="Detalles" asp-controller="Home" method="post">
        
            <div class="input-group mb-3">
              <span class="input-group-text" id="documento">No.</span>
              <input 
                  type="text" 
                  class="form-control" 
                  name="documento" 
                  placeholder="Ingrese el numero de identificación"
                  required
              >
            </div>
            
            <div class="input-group mb-3">
              <span class="input-group-text" id="usuario">User</span>
              <input 
                  type="text" 
                  class="form-control" 
                  name="usuario" 
                  placeholder="Ingrese el usuario" 
                  required
              >
            </div>
            
            <button type="submit" name="enviar" class="btn btn-primary">Consultar</button>
       
        </form>
    
    </div>
    
</div>


